{
  "name": "Nix-NVIM-Terminal-Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "packages": "neovim,git,gcc,nodejs,python3,lazygit"
    }
  },
  "updateContentCommand": "sudo chsh -s /usr/bin/zsh vscode",
  "postCreateCommand": "chmod +x .devcontainer/setup.sh && cp .devcontainer/.zshrc ~/.zshrc",
  "customizations": {
    "devpod": {
      "defaultShell": "/bin/zsh"
    }
  },
  "remoteUser": "vscode"
}
